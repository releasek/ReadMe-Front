@model ReadMe_Back.Models.ViewModels.LoginVm

@{
    ViewData["Title"] = "登入";
}

<body class="bg-secondary">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">登入</h3></div>
                <div class="card-body">
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label asp-for="Account" class="form-label"></label>
                            <input asp-for="Account" class="form-control form-control-sm" />
                            <span asp-validation-for="Account" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control form-control-sm" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3 d-flex justify-content-center">
                            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                            <input type="submit" value="登入" class="btn btn-secondary mt-3" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>
