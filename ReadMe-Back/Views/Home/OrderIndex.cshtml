
@{
    ViewData["Title"] = "OrderIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vue 3 Dashboard</title>
    <!-- 引入 Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div id="app">
        <div class="container-fluid mt-4">
            <!-- Header Section -->
            <h1 class="mb-3">年度圖表</h1>
            <!-- Cards Section -->
            <div class="row mb-4">
                <!-- 總年度銷售金額卡片 -->
                <div class="col-lg-6 col-md-6 mb-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <h5 class="card-title">總年度銷售金額</h5>
                            <p class="card-text" style="font-size: 1.5rem;">$1,200,000</p>
                        </div>
                    </div>
                </div>
                <!-- 總年度銷售數量卡片 -->
                <div class="col-lg-6 col-md-6 mb-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <h5 class="card-title">總年度銷售數量</h5>
                            <p class="card-text" style="font-size: 1.5rem;">5,000 台</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts Section -->
            <div class="row mb-4">
                <div class="col-lg-6 mb-3">
                    <div class="card">
                        <div class="card-header">📈 總銷售額</div>
                        <div class="card-body">
                            <canvas ref="areaChartRef"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mb-3">
                    <div class="card">
                        <div class="card-header">📊 總銷售數量</div>
                        <div class="card-body">
                            <canvas ref="barChartRef"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 引入 Vue -->
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <!-- 引入 Chart.js 插件 -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        const { createApp, ref, onMounted } = Vue;

        createApp({
            setup() {
                const areaChartRef = ref(null);
                const barChartRef = ref(null);

                // 初始化 Area Chart
                const initAreaChart = () => {
                    const ctx = areaChartRef.value.getContext('2d');
                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: ['1月', '3月', '6月', '9月', '12月'],
                            datasets: [{
                                label: 'Sales',
                                data: [10000, 30000, 20000, 25000, 15000],
                                borderColor: 'blue',
                                backgroundColor: 'rgba(135, 206, 250, 0.5)',
                                fill: true,
                            }],
                        },
                        options: {
                            responsive: true,
                            plugins: { legend: { display: false } },
                        },
                    });
                };

                // 初始化 Bar Chart
                const initBarChart = () => {
                    const ctx = barChartRef.value.getContext('2d');
                    new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: ['1月', '3月', '6月', '9月', '12月'],
                            datasets: [{
                                label: 'Revenue',
                                data: [5000, 7000, 10000, 8000, 12000],
                                backgroundColor: 'blue',
                            }],
                        },
                        options: {
                            responsive: true,
                            plugins: { legend: { display: false } },
                        },
                    });
                };

                onMounted(() => {
                    initAreaChart();
                    initBarChart();
                });

                return { areaChartRef, barChartRef };
            },
        }).mount('#app');
    </script>
</body>
</html>
