    <nav nav class="navbar navbar-expand-sm fixed-top bg-light">
        <div class="container d-flex" style="height: 50px;">
            <a class="navbar-brand" href="#"><img src="~/image/readme-high-resolution-logo-transparent.png" alt="" class="img-fluid" style="height: 50px; object-fit: contain;"></a>

            <div class="d-flex ms-2 flex-grow-1">
                <form class="d-flex row w-100" role="search">
                    <input class="form-control col" type="search" placeholder="Search" aria-label="Search" style="width: 400px;">
                    <button type="button" class="btn col-auto">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                </form>
            </div>
            <form class="d-flex ms-auto">
                <a href="@Url.Action("Cart", "Members", new { area = "" })" class="ms-3"><i class="fa-solid fa-cart-plus picture" style="color: #1D597D; vertical-align: middle;"></i></a>
