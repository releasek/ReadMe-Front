    <nav nav class="navbar navbar-expand-sm fixed-top bg-white">
        <div class="container d-flex" style="height: 70px;">
            <a class="navbar-brand" href="#"><img src="~/image/readme-high-resolution-logo-transparent.png" alt="" class="img-fluid" style="height: 70px; object-fit: contain;"></a>

            <div class="d-flex ms-2 flex-grow-1">
                <form class="d-flex row w-100" role="search">
                    <input class="form-control col" type="search" placeholder="Search" aria-label="Search" style="width: 400px;">
                    <button type="button" class="btn col-auto">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                </form>
            </div>
            <form class="d-flex ms-auto">
                <a href="@Url.Action("Cart", "Members", new { area = "" })" class="ms-3"><i class="fa-solid fa-cart-plus picture" style="vertical-align: middle;"></i></a>
                <a href="@Url.Action("Wishlist", "Members", new { area = "" })" class="ms-3"><i class="fa-solid fa-heart picture" style="vertical-align: middle;"></i></a>
                <a href="@Url.Action("Login", "Members", new { area = "" })" class="ms-3 btn btn-sm btn-outline-primary newline">登入</a>
                <a href="@Url.Action("Register", "Members", new { area = "" })" class="ms-2 btn btn-sm btn-outline-danger newline">註冊</a>
                <a href="@Url.Action("Index", "Members", new { area = "" })" class="ms-2 btn btn-sm btn-outline-secondary newline"><i class="fa-solid fa-user"></i></a>
            </form>
        </div>
    </nav>
