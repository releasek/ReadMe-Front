@using ReadMe_Front.Models.ViewModels
@model ProductDetailVm

@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_Layout2.cshtml"; // 指定 Layout
}
<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Readmoo 讀墨電子書</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link rel="stylesheet" href="~/Css/Repeat.css">
    <style>
        .newline {
            white-space: nowrap;
        }

        .picture {
            font-size: 20px
        }
    </style>
</head>
<body>

    <div class="container" id="app" style="margin-top : 70px;">
        <!-- 麵包start -->
        <nav aria-label="breadcrumb" >
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">首頁</a></li>
                <li class="breadcrumb-item"><a href="#">@Model.ParentCategoryName</a></li>
                <li class="breadcrumb-item"><a href="#">@Model.CategoryName</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
            </ol>
        </nav>
        <!--麵包end -->
        <!-- 書籍內容區 -->
        <main class="book-content" style="margin-top : 70px">
            <!-- 書籍資訊 -->
            <div class="book-info">
                <img src="book-cover.jpg" alt="書籍封面">
                <div class="details">
                    <h1>@Model.Title</h1>
                    <p>作者：@Model.Author</p>
                    <p>出版社：@Model.Publisher</p>
                    <p>出版日期：@Model.PublishDate</p>
                    <p>電子書售價：<span class="price">@Model.Price</span></p>
                    <p class="promotion">限時優惠：12/31前選購3本以上78折</p>
                </div>
            </div>

            <!-- 右側操作 -->
            <aside class="book-actions">
                <button>購買</button>
                <button>加入代購清單</button>

            </aside>
        </main>

        <!-- 書籍描述 -->
        <section class="book-description">
            <h2>書籍介紹</h2>
            <p>
                前傳之作！第一本被創造出來的《十二國記》！<br>
                日本讀者超推薦，若從未看過《十二國記》，請從《魔性之子》讀起！
            </p>
        </section>

        <!-- 相關書籍區塊開始 -->
        <div class="container my-1">
            <!-- 區塊標題 -->
            <h3 class="mb-2">相關聯的作者</h3>

            <!-- 一行顯示多本書 -->
            <div class="row">

                <!-- 書籍卡片 #1 -->
                <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4">
                    <div class="card h-100">
                        <!-- 書籍封面 -->
                        <img src="https://via.placeholder.com/200x300?text=書籍封面"
                             class="card-img-top"
                             alt="書籍封面">
                        <!-- 書籍資訊 -->
                        <div class="card-body p-2">
                            <h5 class="card-title mb-1" style="font-size: 1rem;">千羽鶴【典藏版】</h5>
                            <p class="card-text mb-1" style="font-size: 0.875rem;">川端康成</p>
                            <p class="text-muted mb-1" style="font-size: 0.875rem;">電子書售價：NT$ 259</p>
                        </div>
                        <!-- 按鈕列 -->
                        <div class="card-footer bg-white border-0 d-flex justify-content-between p-2">
                            <button class="btn btn-sm btn-outline-danger">購買</button>
                        </div>
                    </div>
                </div>

                <!-- 書籍卡片 #2 -->
                <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4">
                    <div class="card h-100">
                        <img src="https://via.placeholder.com/200x300?text=書籍封面"
                             class="card-img-top"
                             alt="書籍封面">
                        <div class="card-body p-2">
                            <h5 class="card-title mb-1" style="font-size: 1rem;">無用街叢頭的房子</h5>
                            <p class="card-text mb-1" style="font-size: 0.875rem;">卡翠整麗．瓦庫</p>
                            <p class="text-muted mb-1" style="font-size: 0.875rem;">電子書售價：NT$ 352</p>
                        </div>
                        <div class="card-footer bg-white border-0 d-flex justify-content-between p-2">
                            <button class="btn btn-sm btn-outline-danger">購買</button>
                        </div>
                    </div>
                </div>

                <!-- 書籍卡片 #3 -->
                <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4">
                    <div class="card h-100">
                        <img src="https://via.placeholder.com/200x300?text=書籍封面"
                             class="card-img-top"
                             alt="書籍封面">
                        <div class="card-body p-2">
                            <h5 class="card-title mb-1" style="font-size: 1rem;">夜市</h5>
                            <p class="card-text mb-1" style="font-size: 0.875rem;">恆川光太郎</p>
                            <p class="text-muted mb-1" style="font-size: 0.875rem;">電子書售價：NT$ 200</p>
                        </div>
                        <div class="card-footer bg-white border-0 d-flex justify-content-between p-2">
                            <button class="btn btn-sm btn-outline-danger">購買</button>
                        </div>
                    </div>
                </div>

                <!-- 書籍卡片 #4 -->
                <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4">
                    <div class="card h-100">
                        <img src="https://via.placeholder.com/200x300?text=書籍封面"
                             class="card-img-top"
                             alt="書籍封面">
                        <div class="card-body p-2">
                            <h5 class="card-title mb-1" style="font-size: 1rem;">沒關係，是伊坂耶！</h5>
                            <p class="card-text mb-1" style="font-size: 0.875rem;">伊坂幸太郎</p>
                            <p class="text-muted mb-1" style="font-size: 0.875rem;">電子書售價：NT$ 266</p>
                        </div>
                        <div class="card-footer bg-white border-0 d-flex justify-content-between p-2">
                            <button class="btn btn-sm btn-outline-danger">購買</button>
                        </div>
                    </div>
                </div>

                <!-- 書籍卡片 #5 -->
                <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4">
                    <div class="card h-100">
                        <img src="https://via.placeholder.com/200x300?text=書籍封面"
                             class="card-img-top"
                             alt="書籍封面">
                        <div class="card-body p-2">
                            <h5 class="card-title mb-1" style="font-size: 1rem;">生命出售</h5>
                            <p class="card-text mb-1" style="font-size: 0.875rem;">三島由紀夫</p>
                            <p class="text-muted mb-1" style="font-size: 0.875rem;">電子書售價：NT$ 196</p>
                        </div>
                        <div class="card-footer bg-white border-0 d-flex justify-content-between p-2">
                            <button class="btn btn-sm btn-outline-danger">購買</button>
                        </div>
                    </div>
                </div>

                <!-- 書籍卡片 #6 -->
                <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4">
                    <div class="card h-100">
                        <img src="https://via.placeholder.com/200x300?text=書籍封面"
                             class="card-img-top"
                             alt="書籍封面">
                        <div class="card-body p-2">
                            <h5 class="card-title mb-1" style="font-size: 1rem;">別冊 圖書館戰爭！</h5>
                            <p class="card-text mb-1" style="font-size: 0.875rem;">有川浩</p>
                            <p class="text-muted mb-1" style="font-size: 0.875rem;">電子書售價：NT$ 122</p>
                        </div>
                        <div class="card-footer bg-white border-0 d-flex justify-content-between p-2">
                            <button class="btn btn-sm btn-outline-danger">購買</button>
                        </div>
                    </div>
                </div>

            </div> <!-- .row 結束 -->
        </div>
        <!-- 相關書籍區塊結束 -->

    </div>
</body>
</html>