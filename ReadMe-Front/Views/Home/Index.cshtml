@{
	ViewBag.Title = "Home Page";
}

<style>
	.category-bar {
		margin-top: 60px; /* 與 Navbar 留出間距 */
		background-color: white; /* 背景色 */
		padding: 10px 0;
		border-bottom: 1px solid #ddd; /* 分隔線 */
	}

	.carousel-item img {
		height: 500px; /* 設定輪播圖高度 */
		object-fit: cover; /* 確保圖片比例 */
	}

	.banner {
		max-width: 1100px; /* 與 Bootstrap 的 container 最大寬度一致 */
		margin: 0 auto; /* 置中 */
		margin-bottom: 50px; /* 下方間距 */
	}

	section.mb-5 {
		margin-top: 50px; /* 調整這裡的值來改變間距 */
		margin-bottom: 20px; /* 縮小區塊下方距離 */
	}

	section h2 {
		font-size: 20px; /* 設置標題字體大小 */
		font-weight: bold; /* 確保字體加粗 */
		margin-bottom: 10px; /* 縮小標題與內容間的距離 */
		color: rgb(92, 90, 90);
	}

	section .btn {
		margin-top: -10px; /* 調整按鈕稍微向上移 */
		font-size: 14px;
		padding: 3px 10px;
		margin-left: auto; /* 確保按鈕靠右 */
		border-radius: 5px; /* 可選：調整按鈕的圓角大小 */
	}

	.card {
		display: flex;
		flex-direction: column; /* 垂直排列 */
		justify-content: space-between; /* 保持內容上下對齊 */
		height: 100%; /* 設置卡片高度填滿容器 */
	}

	.card-body {
		flex-grow: 1; /* 讓卡片的內容區域自動填滿空間 */
	}

	.card-img-top {
		height: 230px; /* 設定固定高度 */
		object-fit: cover; /* 保持圖片比例且填滿卡片 */
	}

	body {
		padding-top: 20px;
	}

	.container {
		max-width: 1140px; /* 與 Navbar 對齊 */
		margin: 0 auto; /* 水平置中 */
	}

	.card-body {
		padding: 12px; /* 縮小內間距 */
		font-size: 14px; /* 調整字體大小 */
		line-height: 1.2; /* 調整行距，縮小高度 */
	}
</style>


<!--category-bar-->
<div class="category-bar">
	<div class="container d-flex justify-content-between align-items-center">
        <div class="d-flex">
            <a href="~/Categories/Index" class="mx-2 text-dark text-decoration-none fw-bolder">全站分類</a>
            <a href="~/Home/Promote" class="mx-2 text-dark text-decoration-none fw-bolder">限時優惠</a>
            <a href="~/Home/New" class="mx-2 text-dark text-decoration-none fw-bolder">最新上架</a>
            <a href="~/Home/Tech" class="mx-2 text-dark text-decoration-none fw-bolder">科技與生活</a>
            <a href="~/Home/Comfort" class="mx-2 text-dark text-decoration-none fw-bolder">療癒專區</a>

        </div>
	</div>
</div>
<!--category-bar-->

<div class="banner">
	<div class="containerbanner">
		<div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img src="~/image/banner/banner1.jpg" class="d-block w-100" alt="Banner 1">
				</div>
				<div class="carousel-item">
					<img src="~/image/banner/banner1.jpg" class="d-block w-100" alt="Banner 2">
				</div>
				<div class="carousel-item">
					<img src="~/image/banner/banner1.jpg" class="d-block w-100" alt="Banner 2">
				</div>
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
			</button>
		</div>
	</div>
</div>
	<!-- Content Sections -->
<div class="container">
    <!-- 限時優惠 -->
    <section class="mb-2 mt-3">
        <div class="d-flex justify-content-between align-items-center">
            <h2>限時優惠-3件85折專區</h2>
            <a href="~/Home/Promote" class="btn btn-outline-secondary btn-sm">More</a>
        </div>
        <div class="row">
            @{
                Html.RenderAction("_PromotePartial");
            }

        </div>
    </section>
    <hr>
    <!-- 最新上架 -->
    <section class="mb-2 mt-3">
        <div class="d-flex justify-content-between align-items-center">
            <h2>最新上架</h2>
            <a href="~/Home/New" class="btn btn-outline-secondary btn-sm">More</a>
        </div>
        <div class="row">
            <!-- 商品卡片 -->
            @{
                Html.RenderAction("_NewBooksPartial");
            }
        </div>
    </section>
    <hr>
    <!-- 科技與生活 -->
    <section class="mb-2 mt-3">
        <div class="d-flex justify-content-between align-items-center">
            <h2>科技與生活</h2>
            <a href="~/Home/Tech" class="btn btn-outline-secondary btn-sm">More</a>
        </div>
        <div class="row">
            <!-- 商品卡片 -->
            @{
                Html.RenderAction("_TechBooksPartial");
            }
        </div>
    </section>
    <hr>
    <!-- 療癒專區 -->
    <section class="mb-2 mt-3">
        <div class="d-flex justify-content-between align-items-center">
            <h2>療癒專區</h2>
            <a href="~/Home/Comfort" class="btn btn-outline-secondary btn-sm">More</a>
        </div>
        <div class="row">
            <!-- 商品卡片 -->
            @{
                Html.RenderAction("_ComfortBooksPartial");
            }
        </div>
    </section>
</div>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
